<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:id="@+id/parentLayout"
    android:layout_height="match_parent"
    tools:context="com.saibaba.myapplication.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/buttonLayout"
        android:layout_height="wrap_content"
        android:layout_above="@+id/openLayout"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/songTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/img_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton4"
            android:layout_marginBottom="31dp"
            android:layout_marginEnd="28dp"
            android:layout_marginLeft="20dp"
            android:layout_toStartOf="@+id/btnFindMe"
            android:background="@null"
            android:src="@drawable/ic_previous" />

        <ImageButton
            android:id="@+id/btnFindMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_previous"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/img_nxtButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnFindMe"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/btnFindMe"
            android:background="@drawable/ic_next"
            android:src="@drawable/ic_next" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton5"
            android:layout_toStartOf="@+id/btnFindMe"
            android:background="@drawable/ic_repeat"
            android:onClick="RepeatButtonClicked" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnFindMe"

            android:layout_marginLeft="70dp"
            android:background="@drawable/ic_shuffle"
            android:onClick="ShuffleButtonClicked" />

        <ImageButton

            android:id="@+id/fab_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/ic_more"
            android:visibility="visible"

          android:background="@null"
            app:layout_anchorGravity="top|end"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:id="@+id/openLayout"
    android:layout_alignParentBottom="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/openList"
        android:src="@drawable/openlist"/>
    <ListView
        android:id="@+id/songList"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="1dp" />
</LinearLayout>

</RelativeLayout>


